          <li>
            <%= link_to  "MORE", users_path, class: 'link'%>
          </li>
        </ul>
      </div>
      <!--TWEETS-->
      <div class="row">
        <% if current_user? %>
          <%= render 'talk', opinion: @opinion %>
        <% end %>

      </div>
      <div class="row">
        <div class= "talk">
          <%= image_tag('talky.png', alt: 'talkey', class: 'img') %>
