      <!--WHO TO FOLLOW TAG-->
      <div class="row mt-4">
        <p>WHO TO FOLLOW</p>
      </div>

      <!--FOLLOWEB PROFILE-->
      <% @users.each do |user| %>
        <div class="row mt-3">
          <%= image_tag('talky.png', alt: 'talkey', class: 'col-3') %>
          <div class="col-6">
            <p><%= user.fullname %></p>
            <p><%= user.username %></p>
          </div>
          <div class="col-3 m-auto">
                <i class="fa fa-2x fa-plus-circle fill-white"></i>
            </div>
        </div>
      <% end %>

    </div>
  </div>
